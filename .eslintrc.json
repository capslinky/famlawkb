{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off",
    "@typescript-eslint/no-unsafe-function-type": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*.tsx"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "JSXOpeningElement[name.name='Button'] > JSXAttribute[name.name='className'] > Literal[value=/\\b(bg|text|border)-/]",
            "message": "Do not set color classes on Button via className. Use the 'variant' prop (e.g., solidWhite, outlineOnDark) or extend variants in Button."
          },
          {
            "selector": "JSXOpeningElement[name.name='Button'] > JSXAttribute[name.name='className'] > JSXExpressionContainer > Literal[value=/\\b(bg|text|border)-/]",
            "message": "Avoid color utilities in Button className. Prefer a Button 'variant' instead."
          }
        ]
      }
    }
  ]
}
